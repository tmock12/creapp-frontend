<div class="row">
  <div class="col s6 offset-s3">
    <h3>Register:</h3>
  </div>
</div>
<div class="row">
  <form class="col s6 offset-s3" {{action "signUpUser" on="submit"}}>
    {{md-input value=user.firstName label="First Name" class="first_name" }}
    {{md-input value=user.lastName label="Last Name" class="last_name"}}
    {{md-input value=user.phoneNumber label="Phone Number"}}
    {{md-input value=user.email label="Email" type='email' errors=userErrors.email}}
    {{md-input value=company.name label="Company"}}
    {{md-input value=user.password label="Password" type="password" errors=userErrors.password}}
    {{md-btn-submit text='Sign Up' class="center"}}
  </form>
</div>
